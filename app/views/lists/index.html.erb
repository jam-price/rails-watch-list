<h1 class="text-center">Lists</h1>

<% @lists.each do |list| %>
    <%= link_to list_path(list) do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1616530940355-351fabd9524b?ixid=MnwxMjA3fDB8MHxzZWFyY2h8NHx8ZmlsbXN8ZW58MHx8MHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1000&q=60">
            <%= list.name %>
        </div>
    <% end %>
<% end %>

<span class="btn">
    <%= link_to 'Add a List', new_list_path  %>
</span>